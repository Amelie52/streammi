{% extends 'base.html.twig' %}

{% block body %}
    <h1>Categories</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Catelibelle</th>
                <td>{{ category.cateLibelle }}</td>
            </tr>
            <tr>
                <th>Catevideo</th>
