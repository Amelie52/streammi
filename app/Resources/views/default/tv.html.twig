<!DOCTYPE html>
<html>
<head>
    <title>Streammi TV</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="style.css" />
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    <script  type="text/javascript">
        function clock() {
            var t = moment(),
                    a = t.minutes() * 6,
                    o = t.hours() % 12 / 12 * 360 + (a / 12);
            $(".hour").css("transform", "rotate(" + o + "deg)");
            $(".minute").css("transform", "rotate(" + a + "deg)");
        }
        function refreshClock() {
            clock(), setTimeout(refreshClock, 1000)
        }
        refreshClock();
    </script>
</head>
<body>
<div class="container_tv">

    <div id="gros">coucou !</div>
    <div id="petit">heeeey</div>

    <div class="clock">
        <div class="hour"></div>
        <div class="minute"></div>
    </div>

</div>

</body>
</html>