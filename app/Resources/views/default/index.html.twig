{% extends 'base.html.twig' %}

{% block body %}
    <h1>Grille des programmes</h1>

    <table>
        <thead>
        <tr>
            <th>Jour</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for grille in grilles %}
            <tr>
                <td>{% if grille.grilleDate %}{{ grille.grilleDate|date('l jS F Y') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('grille_show', { 'id': grille.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('grille_edit', { 'id': grille.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('grille_new') }}">Create a new entry</a>
        </li>
    </ul>

    <h1>Creneau list</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Creneaudbt</th>
            <th>Creneaufin</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for creneau in creneaus %}
            <tr>
                <td><a href="{{ path('creneau_show', { 'id': creneau.id }) }}">{{ creneau.id }}</a></td>
                <td>{% if creneau.creneauDbt %}{{ creneau.creneauDbt|date('H:i:s') }}{% endif %}</td>
                <td>{% if creneau.creneauFin %}{{ creneau.creneauFin|date('H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('creneau_show', { 'id': creneau.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('creneau_edit', { 'id': creneau.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('creneau_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
