{% extends "base.html.twig" %}

{% block title %}| Creneau{% endblock %}

{% block h2 %}
    Creneau
{% endblock %}

{% block container %}
    {{ parent() }}

<div class="container contain-n-creneau">
    <div class="new-creneau carre_base">
    <h2>Edition du créneau de {% if creneau.creneauDbt %}{{ creneau.creneauDbt|date('H:i') }}{% endif %}</h2>
        <div class="formu">
            {{ form_start(edit_form) }}
                {% form_theme (edit_form) 'bootstrap_3_layout.html.twig' %}
                {{ form_widget(edit_form) }}
                <input type="submit" value="Valider"/>
            {{ form_end(edit_form) }}

            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}

            <a class="btn btn-default" href="{{ path('index') }}">Revenir à la grille</a>
        </div>
        </div>
    </div>



{% endblock %}
