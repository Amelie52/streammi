{% extends "base.html.twig" %}

{% block title %}| Programme{% endblock %}

{% block h2 %}
    Programme
{% endblock %}

{% block container %}
    {{ parent() }}

    <div class="container contain-n-creneau">
        <div class="new-creneau carre_base">

        <h1>Création d'un programme</h1>

            <div class="formu">
        {{ form_start(form) }}
                {% form_theme (form) 'bootstrap_3_layout.html.twig' %}
            {{ form_widget(form) }}

        <label for="creneau"> Créneau</label>
        <select name="creneau">
            {% for cre in creneaux %}
               Créneau : <option value="{{ cre.id }}">{{ cre.creneauDbt|date('H:i') }}</option>
            {% endfor %}
        </select><br><br>

            <input type="submit" value="Créer" />
        {{ form_end(form) }}

                <a class="btn btn-default" href="{{ path('index') }}">Revenir à la grille</a>
            </div>
        </div>
    </div>

{% endblock %}
