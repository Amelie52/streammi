{% extends "base.html.twig" %}

{% block title %}| Programme{% endblock %}

{% block h2 %}
    Programme - {{ programme.progTitre }}
{% endblock %}

{% block container %}
    {{ parent() }}

    <div class="container contain-n-creneau">
        <div class="new-creneau carre_base">

            <hr>

            <p>Titre : {{ programme.progTitre }}</p>
            <p>Dur√©e : {% if programme.progDuree %}{{ programme.progDuree|date('H:i') }}{% endif %}</p>
            <p>Lien : {{ programme.progUrl }}</p>
            <p>Miniature : {{ programme.progMinia }}</p>

            <hr>

        <a  class="btn btn-default" href="{{ path('programme_edit', { 'id': programme.id }) }}">Modifier le programme</a>

        {{ form_start(delete_form) }}
        <input type="submit" id="submit_grey" value="Supprimer">
        {{ form_end(delete_form) }}

        </div>
    </div>


{% endblock %}
