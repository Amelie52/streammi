{% extends "base.html.twig" %}

{% block title %}| Categories{% endblock %}

{% block h2 %}
    Création d'une catégorie
{% endblock %}

{% block container %}
    {{ parent() }}

    <div class="container contain-n-creneau">
        <div class="new-creneau carre_base">
            <div class="formu">
                {{ form_start(form) }}
                        {% form_theme (form) 'bootstrap_3_layout.html.twig' %}
                    {{ form_widget(form) }}
                    <input class="btn btn-default marge_btn" type="submit" value="Créer" />
                {{ form_end(form) }}

                <a class="btn btn-default marge_btn" href="{{ path('categories_index') }}">Revenir aux categories</a>
            </div>
        </div>
    </div>
{% endblock %}
